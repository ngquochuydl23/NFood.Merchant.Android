<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".Ui.Promotions.CreatePromotion.SetupPromoStepTwoFragment">

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp"
        android:layout_marginTop="20dp"
        android:text="Enter Discount Value*"
        android:textColor="@color/titleTextColor" />

    <EditText
        android:id="@+id/enterOptionName"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginHorizontal="10dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/layout_border_item_size10"
        android:backgroundTint="@color/whitesmoke"
        android:hint="0%"
        android:maxLines="1"
        android:paddingStart="10dp"
        android:textColor="@color/gray"
        android:textSize="15sp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp"
        android:layout_marginTop="20dp"
        android:text="Or choose discount value with*"
        android:textColor="@color/titleTextColor" />

    <LinearLayout
        android:id="@+id/enterFoodPrice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp">

      <Button
          android:layout_width="0dp"
          android:layout_height="40dp"
          android:layout_weight="1"
          android:background="@drawable/layout_circle"
          android:backgroundTint="@color/whitesmoke"
          android:text="5%" />

      <Button
          android:layout_width="0dp"
          android:layout_height="40dp"
          android:layout_marginStart="5dp"
          android:layout_weight="1"
          android:background="@drawable/layout_circle"
          android:backgroundTint="@color/whitesmoke"
          android:elevation="0dp"
          android:text="10%" />

      <Button
          android:layout_width="0dp"
          android:layout_height="40dp"
          android:layout_marginHorizontal="5dp"
          android:layout_weight="1"
          android:background="@drawable/layout_circle"
          android:backgroundTint="@color/whitesmoke"
          android:text="15%" />

      <Button
          android:layout_width="0dp"
          android:layout_height="40dp"
          android:layout_weight="1"
          android:background="@drawable/layout_circle"
          android:backgroundTint="@color/whitesmoke"
          android:text="20%" />
    </LinearLayout>
  </LinearLayout>
</androidx.core.widget.NestedScrollView>