<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/containerLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">

  <androidx.constraintlayout.widget.ConstraintLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:paddingVertical="20dp"
      android:paddingHorizontal="10dp"
      tools:ignore="MissingConstraints">

    <TextView
        android:id="@+id/paymentTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="NFood Payment Transfer from ng****** to +621312321"
        android:textColor="@color/titleTextColor"
        android:textSize="16sp"
        android:layout_marginEnd="20dp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/paymentCost"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/paymentDate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Today 13:27"
        android:textColor="@color/textColorPrimary"
        android:textSize="15sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/paymentTitle" />

    <TextView
        android:id="@+id/paymentCost"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="60.000Ä‘"
        android:textColor="@color/green"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

  </androidx.constraintlayout.widget.ConstraintLayout>

  <View
      android:layout_width="match_parent"
      android:layout_height="0.25dp"
      android:layout_marginHorizontal="10dp"
      android:background="@drawable/view_shadow"
      app:layout_constraintBottom_toBottomOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>